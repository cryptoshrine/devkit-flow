{
  "compilerOptions": {
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@test-engine/*": ["programs/test-engine/src/*"],
      "@deploy-guard/*": ["programs/deploy-guard/src/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["tests/utils/*"],
      "@fixtures/*": ["tests/fixtures/*"]
    }
  },
  "include": [
    "./programs/**/*.ts",
    "./tests/**/*.ts",
    "./tests/**/*.spec.ts"
  ],
  "exclude": ["node_modules"]
}
